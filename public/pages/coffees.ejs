<div class="jumbotron text-center">
    <h1>List All Coffees</h1>

    <p>{{ message }}</p>

    <div ng-controller="coffeesController as list">
        <table align="center" valign="middle">
            <tbody ng-repeat="coffee in coffees | orderBy:'-coffeerating'">
            <tr style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle"; >
            <td>
                <div class="starpanel" ng-if="coffee.coffeefavourite">
                    {{coffee.coffeerating}} <i class="fa fa-star fa-6" aria-hidden="true" ng-style="{color: '#4B8CBB'}" ng-click="favouriteoff(coffee._id)"></i>
                </div>
                <div class="starpanel" ng-if="!coffee.coffeefavourite">
                    {{coffee.coffeerating}} <i class="fa fa-star fa-6" aria-hidden="true"  ng-click="favouriteon(coffee._id)"></i>
                </div>
            </td>
            <!-- <td>
                <span class="glyphicon glyphicon-thumbs-up" ng-click="incrementUpvotes(coffee._id)">{{coffee.upvotes}}
            </td> -->
            <td>
                <span style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle";>{{coffee.coffeename}}</span>
            </td>
            <td>
                <span style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle";>
                {{coffee.coffeeshop}}</span>
            </td>
            <td>
                <span class="glyphicon glyphicon-euro"></span>
                {{coffee.coffeeprice}}
            </td>
            <td>

                <span style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle";>


                <button type="button" class="btn btn-default" ng-click="delete(coffee._id)">
                    <span class="glyphicon glyphicon-remove"></span> Remove
                </button>
                <button type="button" class="btn btn-default" ng-click="update(coffee._id)">
                    <span class="glyphicon glyphicon-edit"></span> Edit

                </button>
                </span>
            </td>
            </tr>
            </tbody>
        </table>
        <div class = "row">
            <div class = "col-lg-12">
        <div class="form-group" align="center">
            <map ng-transclude class="short-map" center="map.center" options="map.options" zoom="16" events="map.events">
                <points coords="points.coords" options="points.options" events="points.events" decimals="points.decimals"></points>
                <infowindow position="infowindow.position" coffeeshop="infowindow.coffeeshop">
                    <h4>{{infowindow.coffeeshop}}</h4>
                </infowindow>
            </map>
        </div>
       </div>
    </div>
    </div>
</div>